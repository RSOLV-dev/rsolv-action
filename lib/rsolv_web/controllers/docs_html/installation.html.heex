          <div class="bg-slate-900 dark:bg-slate-950 rounded-lg p-4 overflow-x-auto">
            <pre class="text-sm text-slate-100"><code>name: RSOLV Security Pipeline

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  scan:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      issues: write

    steps:
      - uses: actions/checkout@v4
      - name: Scan for vulnerabilities
        uses: RSOLV-dev/rsolv-action@v3
        with:
          rsolvApiKey: &#36;{{#36;&#36;{{#123;&#36;{{#123; secrets.RSOLV_API_KEY }}#125;}}#125;
          mode: 'scan'

  validate:
    runs-on: ubuntu-latest
    needs: scan
    permissions:
      contents: write
      issues: write

    steps:
      - uses: actions/checkout@v4
      - name: Generate validation tests
        uses: RSOLV-dev/rsolv-action@v3
        with:
          rsolvApiKey: &#36;{{#36;&#36;{{#123;&#36;{{#123; secrets.RSOLV_API_KEY }}#125;}}#125;
          mode: 'validate'
          max_issues: '3'

  mitigate:
    runs-on: ubuntu-latest
    needs: validate
    permissions:
      contents: write
      issues: write
      pull-requests: write

    steps:
      - uses: actions/checkout@v4
      - name: Apply fixes
        uses: RSOLV-dev/rsolv-action@v3
        with:
          rsolvApiKey: &#36;{{#36;&#36;{{#123;&#36;{{#123; secrets.RSOLV_API_KEY }}#125;}}#125;
          mode: 'mitigate'
          max_issues: '1'</code></pre>
