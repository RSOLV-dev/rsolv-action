<script>
  // Client-side email validation and analytics tracking
  document.addEventListener('DOMContentLoaded', function() {
    const emailInput = document.getElementById('email');
    const teamSizeInput = document.getElementById('team_size');
    const validationIcon = document.getElementById('validation-icon');
    const errorMessage = document.getElementById('error-message');
    const form = document.getElementById('signup-form');
    const submitButton = document.getElementById('signup-form-submit');
    const successMessage = document.getElementById('success-message');
    // Progress indicators removed
    
    // Function to preserve UTM parameters
    function preserveUtmParams() {
      // Get current UTM parameters from URL
      const params = new URLSearchParams(window.location.search);
      const utmParams = {};
      
      // Extract all UTM parameters
      ['utm_source', 'utm_medium', 'utm_campaign', 'utm_content', 'utm_term'].forEach(param => {
        const value = params.get(param);
        if (value) utmParams[param] = value;
      });
      
      // Store in sessionStorage if we have any UTM params
      if (Object.keys(utmParams).length > 0) {
        sessionStorage.setItem('rsolv_utm_params', JSON.stringify(utmParams));
      }
      
      return utmParams;
    }
    
    // Store UTM parameters when page loads
    const currentUtmParams = preserveUtmParams();
    
    // Add UTM parameters to all internal links
    function addUtmToLinks() {
      const storedParams = sessionStorage.getItem('rsolv_utm_params');
      if (!storedParams) return;
      
      const utmParams = JSON.parse(storedParams);
      const links = document.querySelectorAll('a[href^="/"], a[href^="#"]');
      
      links.forEach(link => {
        // Skip if link already has UTM parameters
        if (link.href.includes('utm_')) return;
        
        const url = new URL(link.href, window.location.origin);
        
        // Add each UTM parameter to the link
        Object.keys(utmParams).forEach(key => {
          url.searchParams.set(key, utmParams[key]);
        });
        
        link.href = url.toString();
      });
    }
    
    // Add UTM parameters to form
    function addUtmToForm() {
      if (!form) return;
      
      const storedParams = sessionStorage.getItem('rsolv_utm_params');
      if (!storedParams) return;
      
      const utmParams = JSON.parse(storedParams);
      
      // Add each UTM parameter as a hidden field
      Object.keys(utmParams).forEach(key => {
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = key;
        input.value = utmParams[key];
        form.appendChild(input);
      });
    }
    
    // Call these functions to apply UTM parameters
    addUtmToLinks();
    addUtmToForm();
    
    // Function to check if the form is valid and complete
    function checkFormValidity() {
      // Check if form elements are present
      if (!form || !submitButton) return;

      // Get the email value if the input exists
      const emailValue = emailInput ? emailInput.value.trim() : '';
      const emailValid = validateEmail(emailValue);

      // Get the team size value if the input exists
      const teamSizeValue = teamSizeInput ? teamSizeInput.value : '';
      const teamSizeValid = teamSizeValue !== ''; // Must have a value

      // Check all form fields - consider the form valid only if:
      // 1. Email is valid
      // 2. Team size is selected (if the team size field exists)
      const formValid = emailValid && (!teamSizeInput || teamSizeValid);

      // Log for debugging
      console.log('Form validation:', {
        emailValid,
        teamSizeValid,
        formValid,
        emailValue,
        teamSizeValue
      });

      // Update button state
      submitButton.disabled = !formValid;

      // Update button styling
      if (formValid) {
        submitButton.classList.add('enabled');
      } else {
        submitButton.classList.remove('enabled');
      }

      return formValid;
    }
    
    if (form) {
      // No need to disable the button

      // Validate email as user types
      if (emailInput) {
        emailInput.addEventListener('input', function() {
          const email = this.value.trim();
          const isValid = validateEmail(email);

          // Update UI if validation elements exist
          if (validationIcon && errorMessage) {
            if (email === '') {
              // Empty input - hide validation UI
              validationIcon.classList.add('hidden');
              errorMessage.classList.add('hidden');
              emailInput.classList.remove('border-red-500', 'border-green-500');
            } else if (isValid) {
              // Valid email
              validationIcon.classList.remove('hidden');
              errorMessage.classList.add('hidden');
              emailInput.classList.remove('border-red-500');
              emailInput.classList.add('border-green-500');
            } else {
              // Invalid email
              validationIcon.classList.add('hidden');
              errorMessage.textContent = 'Please provide a valid email address.';
              errorMessage.classList.remove('hidden');
              emailInput.classList.remove('border-green-500');
              emailInput.classList.add('border-red-500');
            }
          }

          // No need to update button state
        });
      }

      // Add event listener for team size dropdown
      if (teamSizeInput) {
        teamSizeInput.addEventListener('change', function() {
          console.log('Team size changed:', this.value);
        });
      }
      
      // Validate on form submission and track analytics
      form.addEventListener('submit', function(e) {
        const email = emailInput.value.trim();
        if (!validateEmail(email)) {
          e.preventDefault();
          errorMessage.textContent = 'Please provide a valid email address.';
          errorMessage.classList.remove('hidden');
          emailInput.classList.add('border-red-500');
          
          // Track validation error in analytics
          if (window.plausible) {
            plausible('EarlyAccessFormError', {
              props: { 
                error: 'Invalid email format',
                email_domain: email.split('@')[1] || 'none'
              }
            });
          }
        } else {
          // Track successful submission attempt in analytics
          if (window.plausible) {
            // Get UTM parameters
            const storedParams = JSON.parse(sessionStorage.getItem('rsolv_utm_params') || '{}');
            
            plausible('EarlyAccessFormSubmit', {
              props: { 
                email_domain: email.split('@')[1],
                utm_source: storedParams.utm_source || 'direct',
                utm_medium: storedParams.utm_medium || 'none',
                utm_campaign: storedParams.utm_campaign || 'none'
              }
            });
          }
        }
      });
    }
    
    // Track form success via flash message detection
    if (successMessage && successMessage.offsetParent !== null) {
      if (window.plausible) {
        plausible('EarlyAccessFormSuccess', {
          props: { 
            page: window.location.pathname
          }
        });
      }
    }
    
    // Email validation function
    function validateEmail(email) {
      if (!email) return false;
      if (email.length < 5) return false;
      if (!email.includes('@')) return false;
      
      // Basic regex for email validation that allows + in local part
      const emailRegex = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
      return emailRegex.test(email);
    }
  });
</script>
