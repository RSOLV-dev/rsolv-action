# ============================================================================
# RSOLV Platform Development Environment (.envrc for direnv)
# ============================================================================
# This file is for use with direnv (https://direnv.net/)
# IMPORTANT: DO NOT commit real API keys to this file
# Get your actual values from:
# - Kubernetes secrets (for staging/production)
# - 1Password/LastPass (for team secrets)
# - Platform dashboards (for your own dev keys)
# ============================================================================

# ConvertKit/Kit.com API Configuration
# Get these from: https://app.convertkit.com/account_settings/advanced_settings
export KIT_API_KEY="YOUR_KIT_API_KEY_HERE"
export KIT_API_URL="https://api.convertkit.com/v3"
export KIT_FORM_ID="YOUR_FORM_ID_HERE"
export KIT_EA_TAG_ID="YOUR_TAG_ID_HERE"

# RSOLV API Keys
# Create these at: http://localhost:4000/api-keys (local dev) or https://api.rsolv.dev/api-keys (production)
# Production API key (full pattern access - 170+ patterns)
export RSOLV_PRODUCTION_API_KEY="rsolv_YOUR_PRODUCTION_KEY_HERE"
# Test/Demo API key (limited access - 5 patterns per language)
export RSOLV_TEST_API_KEY="rsolv_YOUR_TEST_KEY_HERE"
# Staging API key
export RSOLV_STAGING_API_KEY="YOUR_STAGING_KEY_HERE"
# Default for development and testing
export RSOLV_API_KEY="$RSOLV_PRODUCTION_API_KEY"

# Test Database Configuration (for PhaseDataClient integration tests)
export TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rsolv_api_test"
export MIX_ENV="test"

# Resend API (for email sending)
# Get your API key from: https://resend.com/api-keys
export RESEND_API_KEY="re_YOUR_RESEND_API_KEY_HERE"

# Postmark Configuration (for transactional emails)
# Get your server API token from: https://account.postmarkapp.com/servers
# Production server: RSOLV
export POSTMARK_API_KEY="YOUR_POSTMARK_API_KEY_HERE"

# Staging Postmark server
export POSTMARK_API_KEY_STAGING="YOUR_STAGING_POSTMARK_API_KEY_HERE"
