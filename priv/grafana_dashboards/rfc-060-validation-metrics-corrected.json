{
  "dashboard": {
    "title": "RFC-060 Validation & Mitigation Metrics",
    "uid": "rfc-060-validation",
    "description": "Monitoring dashboard for RFC-060 validation and mitigation phases with corrected queries",
    "tags": ["rfc-060", "validation", "mitigation", "testing"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Validation Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "100 * sum(rsolv_validation_executions_total{status=\"completed\"}) / sum(rsolv_validation_executions_total)",
          "refId": "A"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 25},
                {"color": "orange", "value": 50},
                {"color": "green", "value": 75}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Validation Executions (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "sum(rsolv_validation_executions_total)",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "Average Trust Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [{
          "expr": "sum(rsolv_mitigation_trust_score_value_sum) / sum(rsolv_mitigation_trust_score_value_count)",
          "refId": "A"
        }],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 1,
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "orange", "value": 40},
                {"color": "yellow", "value": 60},
                {"color": "green", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Mitigation Executions (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [{
          "expr": "sum(rsolv_mitigation_executions_total)",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "blue", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Validation Success Rate Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [{
          "expr": "100 * sum(rate(rsolv_validation_executions_total{status=\"completed\"}[5m])) / sum(rate(rsolv_validation_executions_total[5m]))",
          "legendFormat": "Success Rate",
          "refId": "A"
        }],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "auto"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Validation Duration (p50, p95, p99)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rsolv_validation_duration_milliseconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rsolv_validation_duration_milliseconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rsolv_validation_duration_milliseconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0,
              "showPoints": "auto"
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Trust Score Distribution",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rsolv_mitigation_trust_score_value_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, rate(rsolv_mitigation_trust_score_value_bucket[5m]))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rsolv_mitigation_trust_score_value_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "multi"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 0,
              "showPoints": "auto"
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Validations by Language",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [{
          "expr": "sum by (language) (rsolv_validation_executions_total)",
          "legendFormat": "{{language}}",
          "refId": "A"
        }],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {"mode": "single"},
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "title": "Mitigation Executions by Language",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [{
          "expr": "sum by (language) (rsolv_mitigation_executions_total)",
          "legendFormat": "{{language}}",
          "refId": "A"
        }],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut",
          "tooltip": {"mode": "single"},
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Tests Generated",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24},
        "targets": [{
          "expr": "sum(rsolv_validation_test_generated_total)",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 11,
        "title": "Executions by Repository",
        "type": "table",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 24},
        "targets": [{
          "expr": "sum by (repo, language) (rsolv_validation_executions_total)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }],
        "options": {
          "showHeader": true,
          "footer": {
            "show": false
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "environment": true,
                "framework": true,
                "instance": true,
                "job": true,
                "status": true
              },
              "renameByName": {
                "repo": "Repository",
                "language": "Language",
                "Value": "Executions"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Validation Execution Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [{
          "expr": "sum(rate(rsolv_validation_executions_total[5m])) * 60",
          "legendFormat": "Validations per minute",
          "refId": "A"
        }],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "rpm",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "auto"
            }
          }
        }
      },
      {
        "id": 13,
        "title": "Mitigation Execution Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [{
          "expr": "sum(rate(rsolv_mitigation_executions_total[5m])) * 60",
          "legendFormat": "Mitigations per minute",
          "refId": "A"
        }],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {"mode": "single"}
        },
        "fieldConfig": {
          "defaults": {
            "unit": "rpm",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "auto"
            }
          }
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "label": "Environment",
          "query": "label_values(rsolv_validation_executions_total, environment)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "language",
          "type": "query",
          "label": "Language",
          "query": "label_values(rsolv_validation_executions_total, language)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "repo",
          "type": "query",
          "label": "Repository",
          "query": "label_values(rsolv_validation_executions_total, repo)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(rsolv_validation_executions_total[5m]) > 0",
          "iconColor": "green",
          "tagKeys": "deployment"
        }
      ]
    }
  },
  "overwrite": true
}
