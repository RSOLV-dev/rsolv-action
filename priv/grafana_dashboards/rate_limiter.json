{
  "dashboard": {
    "title": "RSOLV Rate Limiter",
    "uid": "rsolv-rate-limiter",
    "panels": [
      {
        "title": "Rate Limit Exceeded Events",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(rsolv_rate_limiter_limit_exceeded_total[5m])",
            "legendFormat": "Customer: {{customer_id}}, Action: {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          }
        ]
      },
      {
        "title": "Total Rate Limit Exceeded",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(rsolv_rate_limiter_limit_exceeded_total[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "title": "Current Request Count by Customer",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rsolv_rate_limiter_current_count",
            "legendFormat": "{{customer_id}} - {{action}}",
            "refId": "A"
          }
        ],
        "options": {
          "displayMode": "basic",
          "orientation": "horizontal",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "orange",
                  "value": 80
                },
                {
                  "color": "red",
                  "value": 95
                }
              ]
            }
          }
        }
      },
      {
        "title": "Request Rate by Customer",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(rsolv_rate_limiter_requests_allowed_total[5m])",
            "legendFormat": "{{customer_id}} - {{action}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "title": "Top Rate Limited Customers",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "topk(10, sum by (customer_id, action) (increase(rsolv_rate_limiter_limit_exceeded_total[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto",
              "align": "auto"
            }
          }
        }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}