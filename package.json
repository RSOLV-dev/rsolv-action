{
  "name": "rsolv-action",
  "version": "0.1.0",
  "description": "GitHub Action for automating issue fixes with AI",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:all": "vitest run",
    "test:sequential": "vitest run --pool=forks --poolOptions.forks.singleFork",
    "test:integration": "vitest run test/integration",
    "test:security": "vitest run src/security",
    "test:ai": "vitest run src/ai",
    "test:github": "vitest run src/github",
    "test:credentials": "vitest run src/credentials",
    "test:modes": "vitest run src/modes",
    "test:validation": "vitest run src/validation",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "build": "bun build src/index.ts --outdir dist --minify --target node",
    "publish": "gh release create v0.1.0 --title 'Initial Release' --notes 'First public release of RSOLV GitHub Action'",
    "dev-debug": "bun run dev-debug-environment.ts",
    "test:e2e": "bun run e2e-real-vended.ts",
    "test:e2e:all": "cd .. && ./run-all-e2e-comprehensive.sh",
    "test:e2e:pattern-api": "vitest run src/__tests__/pattern-api-e2e.test.ts",
    "test:e2e:integration": "vitest run tests/e2e/pattern-api-integration.test.ts",
    "test:e2e:docker": "cd .. && ./run-e2e-docker.sh"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.67",
    "@babel/parser": "^7.27.5",
    "@babel/traverse": "^7.27.4",
    "@babel/types": "^7.27.6",
    "@octokit/rest": "^21.1.1",
    "js-yaml": "^4.1.0",
    "zod": "^3.25.26"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.7",
    "@types/bun": "^1.2.20",
    "@types/js-yaml": "^4.0.9",
    "@types/nock": "^11.1.0",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^3.2.4",
    "bun-types": "latest",
    "eslint": "^8.57.1",
    "happy-dom": "^18.0.1",
    "nock": "^14.0.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
