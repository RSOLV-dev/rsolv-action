{
  "name": "rsolv-action",
  "version": "0.0.1",
  "description": "GitHub Action for automated issue fixing with AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run ./src/index.ts",
    "dev": "bun --watch run ./src/index.ts",
    "demo": "bun run ./src/demo.ts",
    "demo-env": "bun run ./demo-environment.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RSOLV-dev/RSOLV-action.git"
  },
  "keywords": [
    "github",
    "action",
    "automation",
    "ai"
  ],
  "author": "RSOLV Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RSOLV-dev/RSOLV-action/issues"
  },
  "homepage": "https://github.com/RSOLV-dev/RSOLV-action#readme",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "bun-types": "latest",
    "chai": "^5.0.3",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.19.0",
    "@octokit/rest": "^20.0.2",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.2",
    "nodemailer": "^6.10.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
