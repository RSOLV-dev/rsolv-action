{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node", "@types/bun", "vitest"]
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.skip.ts"]
}